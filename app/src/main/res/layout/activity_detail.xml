<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailActivity"
        android:fillViewport="true"
        android:id="@+id/scroll"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"

            >
            <include
                android:id="@+id/include"
                layout="@layout/appbar"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="46dp"
                android:id="@+id/identity"
                app:layout_constraintTop_toBottomOf="@+id/include"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="30dp"
                    android:layout_marginRight="10dp"
                    >
                    <ImageView
                        android:id="@+id/heroimg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/img1"
                        />
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="207dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/titleDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserat_extrabold"
                        android:text="kue koci-koci"
                        android:textColor="@color/black"
                        android:textSize="26dp" />

                    <TextView
                        android:id="@+id/desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/montserat_reg"
                        android:text="Madura , Jawa Timur , #50"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@+id/titleDetail"
                        tools:layout_editor_absoluteX="200dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="30dp"
                        >
                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/montserat_bold"
                            android:text="Jumlah Kalori : "
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            app:layout_constraintTop_toBottomOf="@+id/desc" />

                        <TextView
                            android:id="@+id/kkal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textSize="13sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="30dp"
                        >



                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/montserat_bold"
                            android:text="Kategori :"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            app:layout_constraintTop_toBottomOf="@+id/textView3"
                            tools:layout_editor_absoluteX="200dp" />

                        <TextView
                            android:id="@+id/category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="TextView"
                            android:textSize="13sp"
                            app:layout_constraintStart_toEndOf="@+id/textView5"
                            tools:layout_editor_absoluteY="336dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:paddingHorizontal="20dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/identity">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserat_bold"
                    android:text="Bahan-Bahan :"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/bahan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"

                    app:layout_constraintTop_toBottomOf="@+id/textView4" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserat_bold"
                    android:text="Langkah-Langkah :"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_marginTop="20dp"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/langkah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"

                    app:layout_constraintTop_toBottomOf="@+id/textView2" />
            </LinearLayout>

            <Button
                android:id="@+id/action_share"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content"
                android:text="Share"
                >

            </Button>
        </LinearLayout>


    </ScrollView>


